# OAuth Environment Variables
# Copy this file to .env and fill in your actual values

# ==================== SUPABASE CONFIGURATION ====================
# Get these from: https://app.supabase.com/projects

SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ==================== GMAIL OAUTH (Optional) ====================
# Get these from: https://console.cloud.google.com/
GMAIL_CLIENT_ID=your-client-id.apps.googleusercontent.com
GMAIL_CLIENT_SECRET=your-client-secret
GMAIL_REDIRECT_URI=http://localhost:8501

# For production, use:
# GMAIL_REDIRECT_URI=https://yourdomain.com

# ==================== MICROSOFT OAUTH (Optional) ====================
# Get these from: https://portal.azure.com/
MICROSOFT_CLIENT_ID=your-client-id
MICROSOFT_CLIENT_SECRET=your-client-secret
MICROSOFT_REDIRECT_URI=http://localhost:8501
MICROSOFT_TENANT_ID=common

# ==================== YAHOO OAUTH (Optional) ====================
# Get these from: https://developer.yahoo.com/
YAHOO_CLIENT_ID=your-client-id
YAHOO_CLIENT_SECRET=your-client-secret
YAHOO_REDIRECT_URI=http://localhost:8501

# ==================== ZERODHA KITE CONNECT ====================
# Get these from: https://developers.kite.trade/
KITE_BROKER_ID=your-broker-id
KITE_API_KEY=your-api-key
KITE_API_SECRET=your-api-secret

# ==================== EMAIL CONFIGURATION (Optional) ====================
# For sending alerts and notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@aitradinglab.com

# ==================== APPLICATION SETTINGS ====================
APP_NAME=AI Trading Lab
APP_ENV=development  # development or production
DEBUG=True
LOG_LEVEL=INFO

# ==================== SECURITY ====================
SECRET_KEY=your-secret-key-for-session-encryption
ENCRYPTION_KEY=your-key-for-credential-encryption

# Additional configuration (optional)
# SESSION_TIMEOUT=86400  # 24 hours in seconds
# DEBUG_AUTH=false
